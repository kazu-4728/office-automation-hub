{
  "name": "ez-manual-simplifier",
  "version": "1.0.0",
  "description": "技術マニュアルを初心者向けに分かりやすく変換するWebアプリケーション",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "wrangler dev backend/src/index.ts",
    "build": "tsc && vite build",
    "build:backend": "wrangler deploy --dry-run",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "deploy:frontend": "vite build && wrangler pages deploy dist",
    "deploy:backend": "wrangler deploy backend/src/index.ts",
    "db:create": "wrangler d1 create ez-manual-db",
    "db:migrate": "wrangler d1 execute ez-manual-db --file=.github/scripts/setup_database.sql",
    "r2:create": "wrangler r2 bucket create ez-manual-storage"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "hono": "^4.6.3",
    "@hono/zod-validator": "^0.2.2",
    "zod": "^3.23.8",
    "zustand": "^4.5.5",
    "react-hook-form": "^7.53.0",
    "@tanstack/react-query": "^5.56.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.3.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "eslint": "^9.12.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.13",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20",
    "@cloudflare/workers-types": "^4.20241004.0",
    "wrangler": "^3.80.0",
    "@playwright/test": "^1.48.0",
    "@mermaid-js/mermaid-cli": "^11.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "manual",
    "simplifier",
    "documentation",
    "education",
    "ai",
    "gemini",
    "cloudflare"
  ],
  "author": "",
  "license": "MIT"
}
