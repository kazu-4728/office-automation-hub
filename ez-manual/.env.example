# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# EZ Manual Simplifier - Environment Variables
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AI Service API Keys
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Gemini Pro API Key
# https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (for GPT Codex, DALL-E if needed)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Cloudflare Credentials
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Cloudflare Account ID
# https://dash.cloudflare.com/ → Workers & Pages → Overview
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Cloudflare API Token
# https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Cloudflare D1 Database
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# D1 Database Name
D1_DATABASE_NAME=ez-manual-db

# D1 Database ID (created after 'wrangler d1 create')
D1_DATABASE_ID=your_d1_database_id_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Cloudflare R2 Storage
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# R2 Bucket Name
R2_BUCKET_NAME=ez-manual-storage

# R2 Access Key ID
R2_ACCESS_KEY_ID=your_r2_access_key_id_here

# R2 Secret Access Key
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# GitHub (for Actions)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# GitHub Token (for API access from Actions)
# https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Development Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Environment (development, staging, production)
NODE_ENV=development

# Frontend Port
VITE_PORT=3000

# Backend Port (Wrangler dev)
BACKEND_PORT=8787

# API Base URL
VITE_API_BASE_URL=http://localhost:8787

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Feature Flags
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Enable Gen Spark Pro (requires approval)
ENABLE_GENSPARK=false

# Enable Caching
ENABLE_CACHE=true

# Enable Analytics
ENABLE_ANALYTICS=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MCP Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# MCP Log Level (debug, info, warn, error)
MCP_LOG_LEVEL=info

# MCP Timeout (milliseconds)
MCP_TIMEOUT=30000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Advanced Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Content Hash Algorithm (sha256, sha512)
HASH_ALGORITHM=sha256

# Max Parallel Jobs (GitHub Actions)
MAX_PARALLEL_JOBS=20

# Chunk Size (for large content processing)
CHUNK_SIZE=5000

# Rate Limit (requests per minute)
RATE_LIMIT=10
